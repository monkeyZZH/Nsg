<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="test.baway.com.nsg.MainActivity">

    <FrameLayout
        android:id="@+id/frament"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18"
        ></FrameLayout>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <RadioButton
            android:id="@+id/sy"
            android:layout_width="50dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/selector1"
            android:checked="true"
            android:textColor="@color/cheng"
            android:text="首页"
            android:textSize="13sp"
            android:onClick="SY"
            />
        <RadioButton
            android:id="@+id/fl"
            android:layout_width="50dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/selector2"
            android:text="分类"
            android:textSize="13sp"
            android:textColor="@color/hui"
            android:onClick="FL"
            />
        <RadioButton
            android:id="@+id/gwc"
            android:layout_width="50dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/selector3"
            android:text="购物车"
            android:textColor="@color/hui"
            android:textSize="13sp"
            android:onClick="GWC"
            />
        <RadioButton
            android:id="@+id/wd"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:textColor="@color/hui"
            android:gravity="center"
            android:drawableTop="@drawable/selector4"
            android:text="个人"
            android:textSize="13sp"
            android:onClick="Wd"
            />
    </RadioGroup>
</LinearLayout>
